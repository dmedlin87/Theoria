{
  "ci": {
    "collect": {
      "url": [
        "http://127.0.0.1:3000",
        "http://127.0.0.1:3000/verse/John.3.16"
      ],
      "numberOfRuns": 3,
      "startServerCommand": "",
      "settings": {
        "chromeFlags": "--headless=new --no-sandbox --disable-dev-shm-usage"
      }
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.9 }],
        "largest-contentful-paint": [
          "error",
          { "maxNumericValue": 2200, "aggregationMethod": "median" }
        ],
        "cumulative-layout-shift": [
          "error",
          { "maxNumericValue": 0.08, "aggregationMethod": "median" }
        ],
        "total-blocking-time": [
          "error",
          { "maxNumericValue": 150, "aggregationMethod": "median" }
        ],
        "speed-index": [
          "error",
          { "maxNumericValue": 3500, "aggregationMethod": "median" }
        ]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": ".lighthouseci"
    }
  }
}
